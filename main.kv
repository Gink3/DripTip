#:kivy 2.0.0 






<adivsor_gives>:
    GridLayout:
        cols: 1
        size: root.width, root.height
        # image of seeker that is getting advice 
        Image:   
            source: "Snapchat-440905881.jpg"
            allow_stretch: True 
        Label: 
            text: "Advice"
        GridLayout:
            cols: 2
            Button:
                text: "Decline"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                text: "Accept"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5} 
         
