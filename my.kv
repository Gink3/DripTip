<Profile>:
    name: "profile"
    n: n
    email: email
    created:created

    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Email: "

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Created: "

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"

<advisor>:
    name: "advisor_sends"
    tip: tip

    GridLayout:
        cols: 1
        size: root.width, root.height
        # image of seeker that is getting advice 
        Image:   
            source: "Snapchat-440905881.jpg"
            allow_stretch: True 
        TextInput:
            id: tip
        GridLayout:
            cols: 1
            Button:
                text: "Send"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: root.send()
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "down"

<seeker>:
    name: "seeker_sees" 

    GridLayout:
        cols: 1
        size: root.width, root.height
        # image of seeker that is getting advice 
        Image:   
            source: "Snapchat-440905881.jpg"
            allow_stretch: True 
        Label: 
            text: "Advice"
        GridLayout:
            cols: 2
            Button:
                text: "Decline"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                text: "Accept"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}




