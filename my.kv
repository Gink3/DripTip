#:kivy 2.0.0

<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw
    userType: userType

    MDFloatLayout:
        MDCard:
            pos_hint:{"center_x": .5, "center_y": .5}
            MDFloatLayout:
                MDTextField:
                    id: namee
                    hint_text: "Name"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .8}
                MDTextField:
                    id: email
                    hint_text: "Email"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .7}
                MDTextField:
                    id: passw
                    password: True
                    hint_text: "Password"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .6}
                MDTextField:
                    id: userType
                    hint_text: "Advisor or Advise Seeker"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDRaisedButton:
                    text: "Log In"
                    pos_hint: {"center_x": .3,"center_y": .4}   
                    on_release: 
                        root.manager.transition.direction = "up"
                        root.login()
                MDRaisedButton:
                    text: "Submit"
                    pos_hint: {"center_x": .7,"center_y": .4}   
                    on_release:
                        root.manager.transition.direction = "left"
                        root.submit()

<LoginWindow>:
    name: "login"
    email: email
    password: password

    MDFloatLayout:
        MDCard:
            pos_hint:{"center_x": .5, "center_y": .5}
            MDFloatLayout:
                MDTextField:
                    id: email
                    hint_text: "Email"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .6}
                MDTextField:
                    id: password
                    hint_text: "Password"
                    password: True
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDRaisedButton:
                    text: "Login"
                    size_hint_x: .39
                    pos_hint: {"center_x": .3,"center_y": .3}   
                    on_release: 
                        root.manager.transition.direction = "up"
                        root.loginBtn()
                MDRaisedButton:
                    text: "Sign Up!"
                    size_hint_x: .39
                    pos_hint: {"center_x": .7,"center_y": .3}   
                    on_release:
                        root.manager.transition.direction = "right"
                        root.createBtn()


