        text: "Goth"
        bold: True
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDIconButton:
        icon: "arrow-right"
        pos_hint: {"center_x": 0.98, "center_y": 0.5}
        on_press: root.gothSection()

        

<AthleticLabel>:
    MDLabel:
        text: "Athletic"
        bold: True
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDIconButton:
        icon: "arrow-right"
        pos_hint: {"center_x": 0.98, "center_y": 0.5}

<ProfessionalLabel>:
    MDLabel:
